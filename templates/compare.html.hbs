    <style>

        body {
            /*background-color: #14021c;*/
            height: 100%;
            image-rendering: pixelated;
            font-family: "Lexend", serif;
            font-optical-sizing: auto;
            font-weight: 500;
            font-style: normal;
            text-align: center;
            overflow: clip;
            background: rgb(98,153,81);
            background: linear-gradient(0deg, rgba(98,153,81,255) 0%, rgba(98,153,81,255) 49.99%, rgba(17,0,26,255) 50%, rgba(17,0,26,255) 100%);
        }
        #panel {
            color: white;
            position: absolute;
            margin: 30px;
            width: 15%;
            height: 90%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition-duration: 600ms;
            z-index: 100;
            background: rgb(19,2,28);
            background: linear-gradient(37deg, rgba(19,2,28,1) 0%, rgba(73,40,114,1) 100%);
            padding: 10px;
            border-radius: 30px;
            border: 7px solid #13021CFF;
        }

        .subPanel {
            display: flex;
            flex-direction: column;
            justify-content: start;
        }

        .flexLine {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            text-align: center;

        }

        #closeButton {
            aspect-ratio: 1 / 1;
            margin: 20px;
        }
        
        .hide {
            transform: scale(0.8) translateX(-110%);
        }

        .pokemonContainer {
            height: 97vh;
            position: relative;
        }

        datalist {
            display: none;
        }

        .inputLine {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

        .content {
            height: 100%;
            width: 100%;
            display: flex;
            align-items: end;
            justify-content: center;
        }

        .unselectable {
            user-drag: none;
            user-select: none;
            -moz-user-select: none;
            -webkit-user-drag: none;
            -webkit-user-select: none;
            -ms-user-select: none;
        }

        #addMon {
            display: flex;
            width: 100%;
        }

        #monSelect {
            flex-grow: 20;
            width: 80%
        }
