            height: 36px;
            width: 36px;
        }

        #background {
            position: absolute;
            width: 100%;
            height: 100%;
            background: url('/static/pokesizesbg.png') repeat-x center center;
            background-size: 15px 402px; /* Ensure the background image covers the entire container */
            z-index: -1;
            background-position-y: bottom;

        }
        .selectize-control {
            width: 100%;
        }

        .inputLine {
            margin-bottom: 15px;
        }
        .superSubPanel {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .floatingBG {
            background-color: rgba(0, 0, 0, 0.5);
            width: 110%;
            height: 110%;
            z-index: 199;
            position: absolute; top: -10px; left: -10px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .floating {
            width: 30%;
            height: 20%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            z-index: 200;
            background: rgb(19,2,28);
            background: linear-gradient(37deg, rgb(28, 2, 2) 0%, rgb(114, 40, 40) 100%);
            padding: 10px;
            border-radius: 30px;
            border: 7px solid #1c0202;
            color: white;
        }
        .hidden {
            display: none;
        }

    </style>
